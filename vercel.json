{
    "version": 2,
    "builds": [
        {
            "src": "*.php",
            "use": "vercel-php@0.7.2"
        },
        {
            "src": "*.+(png|jpg|jpeg|gif|svg|ico|css|js)",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(index|sobre|projetos)",
            "dest": "/$1.php"
        },
        {
            "src": "/(.*)",
            "dest": "/$1"
        }
    ]
}